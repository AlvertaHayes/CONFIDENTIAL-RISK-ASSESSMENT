{
  "name": "fhevm-confidential-risk-assessment",
  "version": "1.0.0",
  "description": "FHEVM Example: Privacy-Preserving Risk Assessment System with Fully Homomorphic Encryption",
  "keywords": [
    "fhevm",
    "fhe",
    "privacy",
    "risk-assessment",
    "blockchain",
    "smart-contracts",
    "hardhat",
    "ethereum"
  ],
  "author": "FHEVM Examples Contributor",
  "license": "MIT",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:coverage": "hardhat coverage",
    "deploy:local": "hardhat run scripts/deploy.ts --network hardhat",
    "deploy:sepolia": "hardhat run scripts/deploy.ts --network sepolia",
    "generate:example": "ts-node automation/create-fhevm-example.ts",
    "generate:docs": "ts-node automation/generate-docs.ts",
    "lint": "solhint 'contracts/**/*.sol'",
    "format": "prettier --write 'contracts/**/*.sol' 'test/**/*.ts' 'scripts/**/*.ts'",
    "clean": "hardhat clean && rm -rf coverage",
    "node": "hardhat node"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.0.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "^20.0.0",
    "chai": "^4.3.0",
    "dotenv": "^16.0.0",
    "ethers": "^6.10.0",
    "hardhat": "^2.19.0",
    "hardhat-gas-reporter": "^1.0.0",
    "prettier": "^3.0.0",
    "prettier-plugin-solidity": "^1.3.0",
    "solhint": "^4.1.0",
    "solidity-coverage": "^0.8.0",
    "ts-node": "^10.9.0",
    "typechain": "^8.3.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@fhevm/solidity": "^0.5.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
